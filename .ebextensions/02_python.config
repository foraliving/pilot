container_commands:
  01_migrate:
    command: 'source /opt/python/run/venv/bin/activate && python manage.py makemigrations'
    leader_only: true
    command: 'source /opt/python/run/venv/bin/activate && python manage.py migrate foraliving --fake'
    leader_only: true
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "foraliving_project.settings"
    "PYTHONPATH": "/opt/python/current/app/foraliving_project:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: foraliving_project/wsgi.py
    NumProcesses: 2
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "foraliving/static/"
